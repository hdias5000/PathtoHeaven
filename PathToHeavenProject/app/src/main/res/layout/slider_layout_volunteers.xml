<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/volunteerSliderLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="contact"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Vname"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_chats"
                    android:id="@+id/VchatButtonHelp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/VcallButtonHelp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cancel_black_24dp"
                    android:id="@+id/cancelConnectionButton"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/B_Vwalk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#616161"
                app:srcCompat="@drawable/ic_directions_walk_white_24dp"
                tools:background="@color/grey_700"
                tools:ignore="VectorDrawableCompat" />
            <ImageButton
                android:id="@+id/B_Vcar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_car_white_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/B_Vbike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_bike_white_24dp"
                tools:ignore="VectorDrawableCompat" />
            <ImageButton
                android:id="@+id/B_Vtransit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_transit_white_24dp"
                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/B_VRouteToElder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Route to Elder" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>