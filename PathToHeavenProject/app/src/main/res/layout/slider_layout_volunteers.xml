<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/volunteerSliderLayout"
        android:background="@color/grey_300">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="contact"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Vname"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_corner_button"
                    android:src="@drawable/ic_chat_white_24dp"
                    android:id="@+id/VchatButtonHelp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_button"
                    android:src="@drawable/ic_call_white_24dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/VcallButtonHelp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_button"
                    android:src="@drawable/ic_cancel_black_24dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cancelConnectionButton"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/B_walk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#616161"
                app:srcCompat="@drawable/ic_directions_walk_white_24dp"
                tools:background="@color/grey_700"
                tools:ignore="VectorDrawableCompat"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/B_car"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_car_white_24dp"
                tools:ignore="VectorDrawableCompat"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/B_bike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_bike_white_24dp"
                tools:ignore="VectorDrawableCompat"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/B_transit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_transit_white_24dp"
                tools:ignore="VectorDrawableCompat"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/B_RouteToElder"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/curved_edges_button"
                android:text="Route To Elder"
                android:onClick="onClick"/>

            <!--<Button-->
                <!--android:id="@+id/B_RouteToElder"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:text="Route to Elder"-->
                <!--android:onClick="onClick"/>-->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>