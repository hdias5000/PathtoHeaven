<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_300"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/helpRouteLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="contact"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/name1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_corner_button"
                    android:src="@drawable/ic_chat_white_24dp"
                    android:id="@+id/chatButtonHelp1" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_button"
                    android:src="@drawable/ic_call_white_24dp"
                    android:id="@+id/callButtonHelp1"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/B_walk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#616161"
                app:srcCompat="@drawable/ic_directions_walk_white_24dp"
                tools:background="@color/grey_700"
                tools:ignore="VectorDrawableCompat" />
            <ImageButton
                android:id="@+id/B_car"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_car_white_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/B_bike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_bike_white_24dp"
                tools:ignore="VectorDrawableCompat" />
            <ImageButton
                android:id="@+id/B_transit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue_A400"
                app:srcCompat="@drawable/ic_directions_transit_white_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/B_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_route"
                android:onClick="onClick"/>

            <!--<Button-->
                <!--android:id="@+id/B_to"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:onClick="onClick"-->
                <!--android:text="Route" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:id="@+id/sendRouteLayout"
            android:gravity="center">

            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/curved_edges_button"
                android:text= "Elder To Destination"
                android:id="@+id/B_ElderToDestination"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/curved_edges_button"
                android:text="Route To Elder"
                android:id="@+id/B_RouteToElder1"/>

            <Button
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/curved_edges_button"
                android:text="Send Route"
                android:id="@+id/B_SendRoute"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>